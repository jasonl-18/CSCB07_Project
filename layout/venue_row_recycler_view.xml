<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venue Title"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/venueNodeTitleid"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venue Location"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/venueNodeLocationid"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Schedule Event"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/venueNodeScheduleButtonid"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Join an Event"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/venueNodeJoinButtonid"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>